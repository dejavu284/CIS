<UserControl x:Class="WpfAppCIS.View.Welcome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAppCIS.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Добро пожаловать!"  HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" FontSize="50"/>
        <TextBlock Text="Приложение разработанно Рязановым Кириллом Вадимовичем" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="15" Margin="5"/>
        

    </Grid>
</UserControl>
