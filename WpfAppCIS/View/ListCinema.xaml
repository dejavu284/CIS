<UserControl x:Class="WpfAppCIS.View.ListCinema"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppCIS.View"
        mc:Ignorable="d">
    <Grid>
        <ListView Name="menulist" ItemsSource="{Binding CinemasInfo}" SelectedItem="{Binding ItemSelected, Mode=TwoWay}" >
            <ListView.View >
                <GridView >
                    <GridViewColumn Header="Название" DisplayMemberBinding ="{ Binding Path= Name}">

                    </GridViewColumn>
                    <GridViewColumn Header ="Адрес " DisplayMemberBinding ="{Binding Path= Address}">

                    </GridViewColumn>
                    <GridViewColumn Header ="Рейтинг" DisplayMemberBinding ="{Binding Path= Rating}">

                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
